<%- include('../../shared/includes/head',{ pageTitle: 'SignUp' }) %> <!-- 헤더에 pageTitle값 동적생산하면서 하드코딩으로 전달-->
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/auth.css">  <!-- 헤드에서 head를 닫지않아서 원하는 템플릿에서 스타일 link가능-->
</head>
<body>
    <%- include('../../shared/includes/header.ejs') %>
    <main>
        <h1>계정 만들기</h1>
        <% if (inputData.errorMessage) { %>
            <section class="alert">
                <h2>잘못된 입력</h2>
                <p><%= inputData.errorMessage%></p>
            </section>
        <% } %>
        <form action="/signup" method="POST">
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
            <p>
                <label for="email">E-Mail</label>
                <input type="email" id="email" name="email" value="<%= inputData.email %>" required>
            </p>
            <p>
                <label for="conform-email">Conform-email</label>
                <input type="email" id="conform-email" name="confirm-email" value="<%= inputData.confirmEmail %>"  required>
            </p>
            <p>
                <label for="password">Password</label>
                <input type="password" id="password" name="password" minlength="6" value="<%= inputData.password %>"  required>
            </p>
            <hr>
            <p>
                <label for="fullname">Full name</label>
                <input type="text" id="fullname" name="fullname"  value="<%= inputData.fullname %>" required>
            </p>
            <p>
                <label for="Street">Street</label>
                <input type="text" id="Street" name="street" value="<%= inputData.street %>" required>
            </p>
            <p>
                <label for="postal">Postal Code</label>
                <input type="text" id="postal" name="postal" minlength="5" maxlength="5" value="<%= inputData.postal %>"  required>
            </p>
            <p>
                <label for="city">City</label>
                <input type="text" id="city" name="city" value="<%= inputData.city %>"  required>
            </p>
            <button class="btn">계정 만들기</button>
            <p id="switch-form"><a href="/login">로그인하기</a></p>
        </form>
    </main>
<%- include('../../shared/includes/footer.ejs') %>